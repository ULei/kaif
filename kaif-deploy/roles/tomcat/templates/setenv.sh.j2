export LANG=en_US.UTF-8

CATALINA_OPTS=" \
    -server \
    -XX:+PrintAdaptiveSizePolicy \
    -XX:+PrintGCDetails \
    -XX:+PrintGCDateStamps \
    -XX:+PrintCommandLineFlags \
    {{tomcat.vm_options}} \
    -Duser.language=en \
    -Duser.country=US \
    -Djava.awt.headless=true \
    -Dcom.sun.management.jmxremote.port={{tomcat.jmxport}} \
    -Dcom.sun.management.jmxremote.authenticate=false \
    -Dcom.sun.management.jmxremote.ssl=false \
    -Dcom.sun.management.jmxremote \
    -Dspring.profiles.active={{ tomcat.spring_profiles_active }} \
    -Dflake.node-id={{ tomcat.flake_node_id }} \
    {{tomcat.catalina_opts}} \
    "

## echo "applying CATALINA_OPTS\n$CATALINA_OPTS"

CATALINA_PID="/var/lib/{{tomcat.name}}/running.pid"